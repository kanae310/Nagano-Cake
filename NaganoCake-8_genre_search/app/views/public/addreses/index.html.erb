<%= render 'layouts/heduser' %>
<h3>配送先登録/一覧</h3>
<%= form_with model: @address, url: public_addreses_path, local: true do |f| %>
<div class="field adress_field">
    <p>郵便番号（ハイフンなし）</p> <%= f.text_field :postal_code,placeholder:'0000000' %>
</div>
<div class="field adress_field">
    <p>住所</p> <%= f.text_area :address,autofocus: true,placeholder:'東京都渋谷区佐々木神園町0-0' %>
</div>
<div class="field adress_field">
    <p>宛名</p> <%= f.text_field :name,placeholder:'令和道子' %>
</div>
<%= f.submit '新規登録', class: "btn btn-success w-120px mt-2"%>
<%end%>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addreses.each do |address|%>
    <tr>
      <td> <%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name%></td>
      <td><%= link_to "編集する",'#',class:"btn btn-success w-120px mt-2" %><%= link_to "削除する",'#',class:"btn btn-danger w-120px mt-2" %></td>
    </tr>
    <%end%>
  </tbody>
</table>