 <%= render 'layouts/hedadmin' %>
 <h3>注文履歴一覧</h3>
  <table class="table">
    <thead>
      <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at ,admin_order_path(order)%></td>
          <td><%= order.end_user.last_name %><%= order.end_user.first_name %></td>
          <% @amount=0%>
          <% order.order_details.each do |order_detail| %>
            <% @amount += order_detail.amount.to_i %>
          <%end%>
          <td><%= @amount %></td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end%>
    </tbody>
  </table>