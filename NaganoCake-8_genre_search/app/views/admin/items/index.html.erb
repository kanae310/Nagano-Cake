 <%= render 'layouts/hedadmin' %>
 <h2>商品一覧</h2>
 <%= link_to "商品新規登録", new_admin_item_path, class: "btn btn-success w-120px mt-2"  %>
 <table class="table">
    <thead>
      <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name,admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.sale_status == true %>
            <p class="status_true">販売中</p>
            <%else%>
            <p class="status_false">販売停止中</p>
            <%end%>
          </td>
        </tr>
      <% end%>
    </tbody>
  </table>