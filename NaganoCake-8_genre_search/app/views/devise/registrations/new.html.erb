<%= render 'layouts/heduser' %>

<h2>Sign up</h2>

<%= form_with model: @end_user, url: end_user_registration_path, id: 'new_user', class: 'new_user',local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true %>
    
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
    
  </div>
  
  <div class="field">
    <%= f.label :last_kana_name %>
    <%= f.text_field :last_kana_name, autofocus: true %>
  
    <%= f.label :first_kana_name %>
    <%= f.text_field :first_kana_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>
  
  

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
